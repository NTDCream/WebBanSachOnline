@model IEnumerable<WebBanSachOnline.Models.User>

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản Lý Tài Khoản - Admin</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/admin-style.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 admin-sidebar d-md-block">
                <div class="admin-logo">
                    <i class="fas fa-book-open"></i>
                    <span>NhaSachOnline</span>
                </div>
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/Home/Index">
                                <i class="fas fa-tachometer-alt"></i>
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Users/Index">
                                <i class="fas fa-users"></i>
                                Quản lý tài khoản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Orders/Index">
                                <i class="fas fa-shopping-cart"></i>
                                Đơn hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Home/Statistic">
                                <i class="fas fa-chart-bar"></i>
                                Thống kê
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Categories/Index">
                                <i class="fas fa-list"></i>
                                Quản lý danh mục
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Books/Index">
                                <i class="fas fa-book"></i>
                                Quản lý sách
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin" id="logout-btn">
                                <i class="fas fa-sign-out-alt"></i>
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="ms-sm-auto col-lg-10 px-md-4">
                <div class="admin-topbar d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"></h5>
                    <div class="user-info">
                        <span>Xin chào, <strong id="admin-name">Admin</strong></span>
                    </div>
                </div>
                <br />
                <div class="admin-content">
                    <h2 class="page-title">QUẢN LÝ TÀI KHOẢN</h2>
                    <br />
                    <div class="">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Quản lý tài khoản</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered custom-table">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Tên đăng nhập</th>
                                                <th>Email</th>
                                                <th>Họ tên</th>
                                                <th>Số điện thoại</th>
                                                <th>Quyền</th>
                                                <th>Hoạt động</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.username</td>
                                                    <td>@item.email</td>
                                                    <td>@item.fullName</td>
                                                    <td>@item.phone</td>
                                                    <td>@item.role</td>
                                                    @if (@item.isActive == true)
                                                    {
                                                        <td class="text-center">
                                                            <i class="fas fa-check text-success"></i>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td class="text-center">
                                                            <i class="fas fa-times text-danger"></i>
                                                        </td>
                                                    }

                                                    <td>
                                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Users", new { id = item.id })">
                                                            Sửa
                                                        </a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                
        </div>
        </main>
    </div>
    </div>
    <br /><br /><br /><br />
</body>
</html>
