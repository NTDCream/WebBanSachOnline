                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin" id="logout-btn">
                                <i class="fas fa-sign-out-alt"></i>
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class=" ms-sm-auto col-lg-10 px-md-4">
                <div class="admin-topbar d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Thống Kê</h5>
                    <div class="user-info">
                        <span>Xin chào, <strong id="admin-name">Admin</strong></span>
                    </div>
                </div>

                <div class="admin-content">
                    <h2 class="page-title">THỐNG KÊ</h2>

                    <div class="">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Thống kê doanh thu</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Từ ngày:</label>
                                        <div class="input-group">
                                            <input type="date"
                                                   class="form-control"
                                                   id="start-date"
                                                   value="2023-04-01" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button">
                                                <i class="fas fa-calendar-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Đến ngày:</label>
                                        <div class="input-group">
                                            <input type="date"
                                                   class="form-control"
                                                   id="end-date"
                                                   value="2023-04-30" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button">
                                                <i class="fas fa-calendar-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end mb-3">
                                        <button class="btn btn-primary w-100"
                                                id="filter-button">
                                            <i class="fas fa-search me-2"></i>Lọc dữ liệu
                                        </button>
                                    </div>
                                </div>

                                <!-- Revenue Chart -->
                                <div class="chart-container"
                                     style="position: relative; height: 300px; width: 100%">
                                    <canvas id="revenueChart"></canvas>
                                </div>

                                <!-- Revenue Data Table -->
                                <div class="table-responsive mt-4">
                                    <table class="table table-bordered table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>STT</th>
                                                <th>Ngày</th>
                                                <th>Doanh thu</th>
                                            </tr>
                                        </thead>
                                        <tbody id="revenue-data">
                                            <tr>
                                                <td>1</td>
                                                <td>01/04/2023</td>
                                                <td>5,600,000₫</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>02/04/2023</td>
                                                <td>3,200,000₫</td>
                                            </tr>
                                            <tr>
                                                <td>3</td>
                                                <td>03/04/2023</td>
                                                <td>1,500,000₫</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Product Statistics -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Thống kê số lượng bán</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>STT</th>
                                                <th>Hình ảnh</th>
                                                <th>Sách</th>
                                                <th>Số lượng bán</th>
                                                <th>Số lượng còn</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <div style="
                                    width: 20px;
                                    height: 20px;
                                    background-color: #ddd;
                                  "></div>
                                                    </div>
                                                </td>
                                                <td>Nghĩ giàu & làm giàu</td>
                                                <td>137</td>
                                                <td>58</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <div style="
                                    width: 20px;
                                    height: 20px;
                                    background-color: #ddd;
                                  "></div>
                                                    </div>
                                                </td>
                                                <td>Nhà giả kim</td>
                                                <td>85</td>
                                                <td>103</td>
                                            </tr>
                                            <tr>
                                                <td>3</td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <div style="
                                    width: 20px;
                                    height: 20px;
                                    background-color: #ddd;
                                  "></div>
                                                    </div>
                                                </td>
                                                <td>Đắc nhân tâm</td>
                                                <td>92</td>
                                                <td>44</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

