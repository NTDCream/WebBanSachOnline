
@{
    ViewBag.Title = "ConfirmReset";
}


@{
    ViewBag.Title = "ForgetPassword";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu - Nhà Sách Online</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>


    <!-- Forgot Password Form -->
    <div class="container mt-5">
        <div class="login-container">
            @*Confirmation View*@
            <div id="confirmation-view">
                <div class="text-center mb-4">
                    <h3>
                        <i class="fas fa-check-circle me-2 text-primary"></i>Xác Nhận Quên Mật Khẩu
                    </h3>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="text-center">
                            Hãy kiểm tra email của bạn để đặt lại mật khẩu
                        </p>
                        <p class="text-center" id="user-email-display">
                            <a href="https://accounts.google.com/v3/signin/identifier?btmpl=mobile_tier2&hl=vi&ifkv=AdBytiO0zMPb6KYWohM3K2_T_VFzL6Sn1DR55GSmk1JF0vrCPHSuNBw8lBW9qVhn4KztkUsM58EW&service=mail&flowName=GlifWebSignIn&flowEntry=ServiceLogin&dsh=S-1993834641%3A1748951243145834">
                            @ViewBag.email
                            </a>
                        </p>
                        <p class="text-center">
                            <i class="fas fa-info-circle me-2"></i>Thư có thể xuất hiện
                            trong thư mục spam, vui lòng kiểm tra kỹ
                        </p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />


    <!-- Toast Container -->
    <div id="toast-container"
         class="position-fixed bottom-0 end-0 p-3"
         style="z-index: 1100">
        <!-- Toasts will be appended here -->
    </div>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <style>
        .form-control {
            padding-left: 45px !important;
        }
    </style>
</body>
</html>



