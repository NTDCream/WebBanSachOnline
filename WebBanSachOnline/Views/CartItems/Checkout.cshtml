@model IEnumerable<WebBanSachOnline.Models.CartItem>

@{
    ViewBag.Title = "Checkout";
}





<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thanh Toán - Nhà Sách Online</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>


    <!-- Main Content -->
    <div class="container mt-4">
        <nav aria-label="breadcrumb" class="bg-light p-2 rounded mb-4 shadow-sm">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/">Trang chủ</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/pages/cart.html">Giỏ hàng</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Thanh toán</li>
            </ol>
        </nav>


        <form method="post" action="/CartItems/ThanhToan">
            <div class="row">
                <!-- Order Summary -->

                <div class="col-lg-7 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="card-title mb-0">Thanh toán</h5>
                        </div>
                        <div class="card-body">

                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header bg-white">
                                            <h6 class="card-title mb-0">Thông tin khách hàng</h6>
                                        </div>

                                        <div class="card-body">
                                            <div class="form-floating mb-3">
                                                <input type="text"
                                                       class="form-control"
                                                       id="fullName"
                                                       name="fullName"
                                                       value="@Model.First().User.fullName"
                                                       required />
                                                <label for="fullName">Họ tên khách hàng</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input type="tel"
                                                       class="form-control"
                                                       id="phone"
                                                       name="phone"
                                                       value="@Model.First().User.phone"
                                                       placeholder="0123456789"
                                                       required />
                                                <label for="phone">Số điện thoại</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input type="text"
                                                       class="form-control"
                                                       id="address"
                                                       name="address"
                                                       value="@Model.First().User.address"
                                                       placeholder="123 ABC Street"
                                                       required />
                                                <label for="address">Địa chỉ nhận hàng</label>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header bg-white">
                                            <h6 class="card-title mb-0">Hình thức thanh toán</h6>
                                        </div>
                                        <div class="card-body">
                                            <select class="form-select" id="paymentMethod" name="paymentMethod">
                                                <option value="COD" selected>
                                                    Thanh toán khi nhận hàng(COD)
                                                </option>
                                                <option value="Bank">Chuyển khoản ngân hàng</option>

                                                <!-- Develop later -->
                                                @*<option value="CARD">Thẻ tín dụng/Ghi nợ</option>
                                                    <option value="EWALLET">Ví điện tử</option>*@
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Checkout Summary -->

                <div class="col-lg-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="card-title mb-0">Đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered" id="cart-table">
                                <thead class="table-light" style="text-align:center">
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int totalPrice = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        int price = item.quantity * item.Book.price;
                                        totalPrice += price;
                                        <tr>
                                            <td>@(item.Book.title) x @(item.quantity)</td>
                                            <td style="text-align:center">@string.Format("{0:N0} đ", price)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div id="order-summary">
                                <hr />
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Tổng cộng:</strong>
                                    <strong class="text-danger fs-5" id="total">@string.Format("{0:N0} đ", totalPrice)</strong>
                                </div>
                                <button type="submit"
                                        id="place-order-btn"
                                        class="btn btn-primary w-100 py-2">
                                    Đặt hàng
                                </button>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </form>
    </div>



    <!-- Toast Container -->
    <div id="toast-container"
         class="position-fixed bottom-0 end-0 p-3"
         style="z-index: 1100">
        <!-- Toasts will be appended here -->
    </div>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
